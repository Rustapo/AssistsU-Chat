    <div id="messages" style="padding:10px">
        <script>
            getMessages = () => {
                $.ajax({
                    url: '/user/messages',
                    type: 'post',
                    headers: {
                        'CSRF-Token': '<?-csrfToken?>'
                    },
                }).done((data) => {
                    var messages = data.data.messages
                    messages.forEach(message => {
                        addMessage(message)
                    })
                    scroll()
                })
            }, getMessages()
